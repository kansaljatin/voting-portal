struct voter_detail
{
	char national_id[15];
	char name[30];
	char father_name[30];
	char birth_date[10];
	struct voter_detail *next;
};
struct voter_detail voter,*head;

void main_loges();
void vote_insert();
int check();
void given();
void voting();
void congratulation();
void admin_panel();
void vote_count();
void winner();
void tie(int[],char[][20],int);
void end();

int a=0,b=0,c=0,d=0;
int f[4];
char id[10];

int main()
{
	FILE *fp;
	fp=fopen("VOTE_COUNT.txt","r+");
	int i;
	for(i=0;i<4;i++)
	fscanf(fp,"%d",&f[i]);
	fclose(fp);
	a=f[0];
	b=f[1];
	c=f[2];
	d=f[3];
	printf("\n\n");
	printf("\t\t\t\t\t\t                 ********************* WELCOME TO NATIONAL VOTING PORTAL *********************\n\n");
	printf("\n        \t\t\t\t\t\t************************** PLEASE ENTER ONE(1) FOR LOGGING VOTE MAIN LOGES **************************\n\n\n");	
	int ch;
	scanf("%d",&ch);
	if(ch==1)
	{
		main_loges();
	}
	return 0;
}

void main_loges()
{
	system("cls");
	printf("\n\n\t\t\t\t\t\t                 ********************* WELCOME TO NATIONAL VOTING PORTAL *********************\n");
	printf("\n\n");
	Sleep(250);
	printf("              \t\t\t\t\t\t\t\t\t\t 1. FOR VOTE ENTRY \n\n");
	Sleep(350);
	printf("               \t\t\t\t\t\t\t\t\t\t 2. FOR ADMIN LOGIN\n\n");
	Sleep(350);
	printf("                \t\t\t\t\t\t\t\t\t 3. FOR WINNER\n\n");
	Sleep(350);
	printf("                 \t\t\t\t\t\t\t\t\t 4. FOR EXIT\n\n\n");
	Sleep(300);
	printf("\n\t\t\t\t\t\t\t             ********************* PLEASE ENTER YOUR CHOICE *********************\n");
	Sleep(300);
	printf("\n\n\t\t\t\t\t\t\t\t\t\tYOUR CHOICE(1/2/3/4) :: ");
	int n;
	scanf("%d",&n);
	if(n==1)
	{
		vote_insert();
	}
	else if(n==2)
	{
		admin_panel();
	}
	else if(n==3)
	{
		winner();
	}
	else if(n==4)
	{
		end();
	}
}

