void winner()
{
	system("cls");
	Sleep(150);
	int w[4],i,l,p;
	char name[4][20];
	w[0]=a;
	w[1]=b;
	w[2]=c;
	w[3]=d;
	strcpy(name[0],"NARENDRA MODI");
	strcpy(name[1],"RAHUL GANDHI");
	strcpy(name[2],"ARVIND KEJRIWAL");
	strcpy(name[3],"NOTA");
	l=w[0];
	p=0;
	for(i=1;i<4;i++)
	{
		if(w[i]>l)
		{
			l=w[i];
			p=i;	
		}	
	}	
	printf("\n\n\t\t\t\t\t\t                    ***************************** NATIONAL VOTING PORTAL *****************************\n\n");
	Sleep(350);
	printf("\n\t\t\t\t\t\t\t\t\t    ********************* WINNER OF THE ELECTION *********************");
	printf("\n\n\n\t\t\t\t\t\t\t\t\t\t   ");
	Sleep(300);
	printf("CANDIDATE NAME");
	printf("\t\t\t");
	printf("NO. OF VOTES");
	printf("\n\n\t\t\t\t\t\t\t\t\t\t   ");
	Sleep(300);
	printf(name[p]);
	printf("\t\t\t     ");
	printf("%d",l);
	printf("\n\n\n        \t\t\t\t\t\t\t************************** PLEASE ENTER ONE(1) FOR LOGGING VOTE MAIN LOGES **************************\n\n");	
	int ch3;
	scanf("%d",&ch3);
	if(ch3==1)
	{
		main_loges();
	}
	
}

