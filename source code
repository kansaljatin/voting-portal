	Sleep(350);
	printf("                 \t\t\t\t\t\t\t\t\t 4. FOR EXIT\n\n");
	Sleep(300);
	printf("\n\t\t\t\t\t\t\t             ********************* PLEASE ENTER YOUR CHOICE *********************\n");
	int n;
	scanf("%d",&n);
	if(n==1)
	{
		vote_insert();
	}
	else if(n==2)
	{
		admin_panel();
	}
	else if(n==3)
	{
		winner();
	}
	else if(n==4)
	{
		exit();
	}
}

