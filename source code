void admin_panel()
{
	system("cls");
	int i;
	char p[9];char id[10],ch;
	printf("\n\n");
	printf("\t\t\t\t\t\t                   ********************* WELCOME TO NATIONAL VOTING PORTAL *********************\n\n");
	Sleep(350);
	printf("\n\t\t\t\t\t\t      ************************ PLEASE ENTER FOLLOWING CREDENTIALS TO UNLOCK ADMIN PANEL ************************\n\n");
	Sleep(350);
	printf("\n\t\t\t\t\t\t\t\t\t");
	printf("ID\t\t       :: ");
	scanf("%s",&id);
	Sleep(150);
	printf("\n\t\t\t\t\t\t\t\t\t");
	printf("PASSWORD(8 CHARACTERS) :: ");
	for(i=0;i<8;i++)
	{
		ch=getch();
		p[i]=ch;
		char ch='*';
		printf("%c",ch);
	}
	p[i]='\0';
	
	if(strcmp(id,"jatin765")==0 && strcmp(p,"08072001")==0)
	{
		system("cls");
		Sleep(100);
		printf("\n\n\t\t\t\t\t\t\t\t\t**************************** ACCESS GRANTED ****************************");	
		Sleep(400);
		printf("\n\n\n\t\t\t\t\t\t                    ***************************** NATIONAL VOTING PORTAL *****************************\n\n");
		Sleep(350);
		printf("\n\t\t\t\t\t\t\t                   ********************* WELCOME TO THE ADMIN PANEL *********************\n\n\n");
		vote_count();
	}
	else
	{	
		system("cls");
		printf("\n\t\t\t\t\t\t\t\t      **************************** INVALID ID OR PASSWORD ****************************");
		Sleep(400);
		printf("\n\n\n\t\t\t\t\t\t\t\t\t     ************************** ACCESS DENIED **************************");
		Sleep(400);
		printf("\n\n\n        \t\t\t\t\t\t\t************************** PLEASE ENTER ONE(1) FOR LOGGING VOTE MAIN LOGES **************************\n\n");	
		int ch1;
		scanf("%d",&ch1);
		if(ch1==1)
		{
			main_loges();
		}
	}
			
}

