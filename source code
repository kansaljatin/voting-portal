int check()
{
	int i,flag=0;
	
	FILE *fptr;
	fptr=fopen("VOTING_RECORD.txt","r+");
	for(i=0;i<15;i++)
	{	
		char c[10];
		fscanf(fptr,"%s",c);
		if(strcmp(c,id)==0)
		{
			flag++;
			break;
		}
	}
	fclose(fptr);
	if(flag==0)
	{
		return 0;
	}
	else if(flag==1)
	{
		return 1;
	}
}

